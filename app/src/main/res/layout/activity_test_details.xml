<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.fragment.test.TestDetailsActivity">

    <include layout="@layout/base_white_toolbar" />

    <include
        layout="@layout/recycler_smart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_titme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/common_line_bg_color"
        android:textColor="@color/black"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="@dimen/sp_9"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/main_color"
            android:layout_weight="1"
            android:text="重新考试"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/bt_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/main_color"
            android:layout_weight="1"
            android:text="交 卷"
            android:layout_marginLeft="@dimen/dp_1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>